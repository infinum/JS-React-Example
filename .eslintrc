{
	"extends": "@infinumjs/eslint-config-react-ts",
	"plugins": ["chakra-ui"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"project": ["./tsconfig.json"]
			}
		}
	],
	"rules": {
		"chakra-ui/props-order": "error",
		"chakra-ui/props-shorthand": "error",
		"chakra-ui/require-specific-component": "error"
	},
	"parser": "@typescript-eslint/parser"
}
