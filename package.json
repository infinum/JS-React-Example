{
	"name": "js-react-example",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "PROXY_ENV=development next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest --coverage",
		"watch": "jest --watch --coverage",
		"api:dev": "tsnd --pretty --project ./api/tsconfig.json ./api"
	},
	"dependencies": {
		"@chakra-ui/react": "^1.6.1",
		"@datx/core": "^2.1.0",
		"@datx/jsonapi": "^2.2.0",
		"@emotion/react": "^11.4.0",
		"@emotion/styled": "^11.3.0",
		"@hookform/error-message": "2.0.0",
		"@koa/cors": "^3.1.0",
		"date-fns": "^2.21.3",
		"dequal": "^2.0.2",
		"framer-motion": "^4.1.11",
		"http-proxy-middleware": "^2.0.0",
		"mobx": "^4.15.7",
		"next": "10.2.0",
		"next-compose-plugins": "^2.2.1",
		"next-react-svg": "^1.1.2",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-hook-form": "^7.4.2",
		"swr": "^0.5.6"
	},
	"devDependencies": {
		"@babel/plugin-proposal-decorators": "^7.13.15",
		"@infinumjs/eslint-config-react": "^2.1.0",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.0.2",
		"@types/react": "^17.0.5",
		"eslint": "^7.25.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.6",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.4"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test",
			"pre-commit": "prettier --write"
		}
	},
	"lint-staged": {
		"{src,tests}/**/*.{js,ts,tsx}": [
			"eslint",
			"prettier --write"
		]
	},
	"jest": {
		"coveragePathIgnorePatterns": [
			"/tests/",
			"/node_modules/"
		],
		"moduleFileExtensions": [
			"ts",
			"js",
			"tsx"
		],
		"testRegex": "tests/(.*).test.tsx?$",
		"globals": {
			"ts-jest": {
				"diagnostics": {
					"warnOnly": true
				}
			}
		},
		"preset": "ts-jest",
		"testMatch": null
	}
}
