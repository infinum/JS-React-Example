{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["jest", "@testing-library/jest-dom", "node"],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/**/__tests__/**/*",
		"jest.setup.ts"
	],
	"exclude": ["node_modules", "dist", "coverage"]
}
